package tab

import (
	"github.com/darklab8/fl-darkstat/darkstat/configs_export"
	"strings"
	"html"
)

templ InfocardShared() {
	<style>
		.infocard {
			margin: 10px;
		}
		.infocard p {
			margin-top: 5px;
			margin-bottom: 0px;
		}
	</style>
	<div class="infocard">
		<h3>infocard</h3>
		{ children... }
	</div>
}

templ Infocard(info configs_export.Infocard) {
	@InfocardShared() {
		for _, line := range info {
			if strings.ReplaceAll(line.ToStr()," ", "") == "" {
				<p><br></p>
			} else {
				<p>
					for _, phrase := range line.Phrases {
						if phrase.Link != nil {
							<a href={ templ.SafeURL(*phrase.Link) }>{ html.UnescapeString(phrase.Phrase) }</a>
						} else {
							<span class={ templ.KV("bold", phrase.Bold) }>{ html.UnescapeString(phrase.Phrase) }</span>
						}
					}
				</p>
			}
		}
	}
}
